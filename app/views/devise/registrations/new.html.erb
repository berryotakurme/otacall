<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :nickname %> <em>(10 characters maximum)</em><br />
    <%= f.text_field :nickname, autofocus: true, maxlength: "10" %>
  </div>

  <div class="field">
    <%= f.label :oshi_member %> <em>(50 characters maximum)</em><br />
    <%= f.text_field :oshi_member, autofocus: true, maxlength: "50" %>
  </div>

  <div class="field">
    <%= f.label :greeting %> <em>(100 characters maximum)</em><br />
    <%= f.text_field :greeting, autofocus: true, maxlength: "100" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
