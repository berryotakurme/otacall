<header class="header header--section">
  <h2 class="text-middle">
    <i class="icon-movie color-gray-light"></i>曲を検索
  </h2>
</header>
<%= form_tag('/songs/search', method: :get) do %>
  <input class="search__query" name="keyword" placeholder="楽曲名を入れてください" type="text" value=""><button class="btn-search" title="検索" type="submit"><i class="icon-search"></i></button></input>
<% end %>
<form accept-charset="utf-8" action="/" class="js-search-submit" method="get">
</form>

<header class="header header--section">
  <h2 class="text-middle">
    <i class="icon-movie color-gray-light"></i>検索結果
  </h2>
</header>
<% if params[:keyword] %>
  <ul class="listview js-lazy-load-images">
    <% @songs.each do |song| %>
    <li>
      <a class="listview__element--right-icon" href="/songs/<%= song.id %>/" title="<%= song.name %>">
        <div class="position-right p1em">
          <i class="icon-chevron-right color-sub"></i>
        </div>
        <div class="row no-space-bottom">
          <div class="col6 push6">
            <h3 class="text-middle text-break">
              <span class="color-sub"><%= song.name %></span>
            </h3>
          </div>
        </div>
      </a>
    </li>
    <% end %>
  </ul>
<% end %>

