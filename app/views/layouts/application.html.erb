<!DOCTYPE html>
<html>
<head>
  <title>Otacall</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <header class='header'>
    <div class='col-xs-12'>
      <div class="nav-header">
        <h1><a class="navbar-brand" href="/">Hello!OtaCalls</a></h1>
      </div>
    </div>

    <div class='col-xs-12'>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <ul class="nav navbar-nav">
            <li><a href="/">トップ</a></li>
            <% if user_signed_in? %>
              <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
              <li><a href="/users/<%= current_user.id %>">マイページ</a></li>
            <% else %>
              <li><%= link_to "ログイン", new_user_session_path, class: 'post' %></li>
              <li><%= link_to "新規登録", new_user_registration_path, class: 'post' %></li>
            <% end %>
          </ul>
          <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="楽曲名を入力してください">
            </div>
            <button type="submit" class="btn btn-default">検索</button>
          </form>
          <% if user_signed_in? %>
            <p class="navbar-text"><%= current_user.nickname %>さんがログイン中です</p>
          <% end %>
        </div>
      </nav>
    </div>
  </header>

<div class="row">
  <div class="content center-block">
    <%= yield %>
  </div>
</div>

</body>
</html>
